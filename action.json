{
    "manifest": {
        "displayName": "Devices on/off",
        "invocationName": "Devices on/off",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.example.actions.mydevices",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.mydevices",
                "parameters": [
                    {
                        "name": "status",
                        "type": "Status"
                    },
                    {
                        "name": "device",
                        "type": "Device"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Turn $Status:status $Device:device",
                        "Turn $Device:device $Status:status"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Device $device $status"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.mydevices",
                                    "params": {
                                        "status": "$status",
                                        "device": "$device"
                                    }
                                }
                            }
                        ]
                    }
                }
            }  
        },
        {
            "name": "com.example.actions.TemperatureHome",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.TemperatureHome",
                "parameters": [
                    {
                        "name": "device",
                        "type": "Device"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Whats the temperature of $Device:device"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [                           
                            {
                                    "simpleResponse": {
                                        "textToSpeech": "The temperature is: "
                                    }
                                },
                                {
                                    "deviceExecution": {
                                        "command": "com.example.commands.TemperatureHome",
                                        "params": {
                                            "device": "$device"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }  
             },
            {
                "name": "com.example.actions.BlinkLight",
                "availability": {
                    "deviceClasses": [
                        {
                            "assistantSdkDevice": {}
                        }
                    ]
                },
                "intent": {
                    "name": "com.example.intents.BlinkLight",
                    "parameters": [
                        {
                            "name": "number",
                            "type": "SchemaOrg_Number"
                        },
                        {
                            "name": "device",
                            "type": "Device"
                        },
                        {
                            "name": "speed",
                            "type": "Speed"
                        }
                    ],
                    "trigger": {
                        "queryPatterns": [
                            "blink ($Speed:speed)? $Device:device $SchemaOrg_Number:number times",
                            "blink $Device:device $SchemaOrg_Number:number times ($Speed:speed)?",
                            "($Speed:speed)? blink $Device:device $SchemaOrg_Number:number times"
                        ]
                    }
                },
                "fulfillment": {
                    "staticFulfillment": {
                        "templatedResponse": {
                            "items": [
                                {
                                    "simpleResponse": {
                                        "textToSpeech": "Blinking $device $speed $number times"
                                    }
                                },
                                {
                                    "deviceExecution": {
                                        "command": "com.example.commands.BlinkLight",
                                        "params": {
                                            "device":"$device",
                                            "speed": "$speed",
                                            "number": "$number"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            
        {
            "name": "com.example.actions.LEDcolor",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.LEDcolor",
                "parameters": [
                    {
                        "name": "color",
                        "type": "SchemaOrg_Color"
                    },
                    {
                        "name": "device",
                        "type": "Device"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "set $Device:device on $SchemaOrg_Color:color"
                        
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "The color is $color"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.LEDcolor",
                                    "params": {
                                        "device": "$device",
                                        "color": "$color"
                                    }
                                }
                            }
                        ]
                    }
                }
            }  
        }
    ],
    "types": [
        {
            "name": "$Speed",
            "entities": [
                {
                    "key": "SLOWLY",
                    "synonyms": [
                        "slowly",
                        "slow"
                    ]
                },
                {
                    "key": "NORMALLY",
                    "synonyms": [
                        "normally",
                        "regular"
                    ]
                },
                {
                    "key": "QUICKLY",
                    "synonyms": [
                        "quickly",
                        "fast",
                        "quick"
                    ]
                }
            ]
        },
        {
            "name": "$Device",
            "entities": [
                {
                    "key":"LED1",
                    "synonyms": [
                        "led 1",
                        "device 1",
                        "light 1",
                        "led one",
                        "device one",
                        "light one"
                    ]
                },
                {
                    "key":"LED2",
                    "synonyms": [
                        "led 2",
                        "device 2",
                        "light 2",
                        "led two",
                        "device two",
                        "light two"
                    ]
                },
                {
                    "key":"LED3",
                    "synonyms": [
                        "led 3",
                        "device 3",
                        "light 3",
                        "led three",
                        "device three" 
                    ]
                },
                {
                    "key":"RGB LED",
                    "synonyms": [
                        "rgb led",
                        "rgb device",
                        "rgb light", 
                        "color led",
                        "color light",                       
                        "color device" 
                    ]
                },
                {
                    "key":"ALL LEDS",
                    "synonyms": [
                        "all leds",
                        "all devices",
                        "all lights"
                    ]
                },
                {
                    "key":"TEMP SENSOR",
                    "synonyms": [
                        "temperature sensor",
                        "TC74"
                    ]
                }

            ]
        },
        {
            "name": "$Status",
            "entities": [
                {
                    "key":"ON",
                    "synonyms": [
                        "on",
                        "true"
                    ]
                },
                {
                    "key":"OFF",
                    "synonyms": [
                        "off",
                        "false"
                    ]
                }
                
            ]
        }
        
        
    ]
}
